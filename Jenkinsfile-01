// Building WAR file
pipeline {
    agent any 

    stages {
        stage('clean') {
            steps {
                bat 'mvn clean'
            }
        }

        stage('validate') {
            steps {
                bat 'mvn validate'
            }
        }

        stage('compile') {
            steps {
                bat 'mvn compile'
            }
        }

        stage('test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('package') {
            steps {
                bat 'mvn package'
            }
        }

        stage('install') {
            steps {
                bat 'mvn install'
            }
        }
 stage('deploy-to-tomcat') {
            steps {
                    echo Stopping Tomcat
                    net stop Tomcat9
                    copy target\\yourapp.war J:\Zevops_kt\Tomcat-9.0.107\webapps\\maven-war.war
                    echo Starting Tomcat
                    net start Tomcat9
    }
}
