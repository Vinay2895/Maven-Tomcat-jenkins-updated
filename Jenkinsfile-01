// Building WAR file
pipeline {
    agent any 

    stages {
        stage('clean') {
            steps {
                bat 'mvn clean'
            }
        }

        stage('validate') {
            steps {
                bat 'mvn validate'
            }
        }

        stage('compile') {
            steps {
                bat 'mvn compile'
            }
        }

        stage('test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('package') {
            steps {
                bat 'mvn package'
            }
        }

        stage('install') {
            steps {
                bat 'mvn install'
            }
        }
 stage('deploy-to-tomcat') {
            steps {
                   bat echo Stopping Tomcat
                    bat net stop Tomcat9
                   bat copy target\\yourapp.war C:\\apache-tomcat-9.0.85\\webapps\\yourapp.war
                   bat echo Starting Tomcat
                   bat net start Tomcat9
    }
}
